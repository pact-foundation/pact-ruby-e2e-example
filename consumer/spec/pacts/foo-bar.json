{
  "consumer": {
    "name": "Foo"
  },
  "provider": {
    "name": "Bar"
  },
  "interactions": [
    {
      "description": "a retrieve thing request",
      "request": {
        "method": "get",
        "path": "/thing",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "thing": {
            "test": "My thing",
            "bar": "Another thing"
          },
          "array": [
            1
          ]
        },
        "matchingRules": {
          "$.body.thing.test": {
            "match": "type"
          },
          "$.body.thing.bar": {
            "match": "type"
          },
          "$.body.array": {
            "min": 1
          },
          "$.body.array[*].*": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}