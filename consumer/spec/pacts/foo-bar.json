{
  "consumer": {
    "name": "Foo"
  },
  "provider": {
    "name": "Bar"
  },
  "interactions": [
    {
      "description": "a retrieve thing request",
      "request": {
        "method": "get",
        "path": "/thing",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "thing": {
            "test": "My thing",
            "bar": "Another thing"
          },
          "array": [
            1
          ],
          "nested": {
            "long": {
              "path": {
                "to": {
                  "a": {
                    "person": {
                      "firstName": "Foo",
                      "lastName": "Bar",
                      "driversLicence": "ABC567"
                    }
                  }
                }
              }
            }
          },
          "address": {
            "street": "200 Bourke St",
            "suburb": "Melbourne"
          },
          "phone": "0412 746 345",
          "mother": "Mary",
          "father": null,
          "favouriteColours": [
            "red"
          ],
          "favouriteMovies": [
            "Jaws",
            "The Sound of Music"
          ],
          "children": [
            {
              "name": "Susan",
              "age": 7
            }
          ],
          "parents": [
            {
              "name": "Adam"
            },
            {
              "name": "Eve"
            }
          ]
        },
        "matchingRules": {
          "$.body.thing": {
            "match": "type"
          },
          "$.body.array": {
            "min": 1
          },
          "$.body.array[*].*": {
            "match": "type"
          },
          "$.body.nested.long.path.to.a.person.driversLicence": {
            "match": "regex",
            "regex": "ABC\\d+"
          },
          "$.body.children": {
            "min": 1
          },
          "$.body.children[*].*": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}